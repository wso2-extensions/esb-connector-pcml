<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="pcml"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <log level="full"/>
            <log level="custom">
                <property name="Action" expression="get-property('transport','Action')"/>
            </log>
            <switch source="get-property('transport','Action')">
                <case regex="urn:traceFileCreate">
                    <log level="custom">
                        <property name="Action" value="traceFileCreatetraceFileCreate"/>
                    </log>
                    <pcml.trace/>
                </case>
                <case regex="urn:traceDatastreamAndWarning">
                    <log level="custom">
                        <property name="Action" value="traceDatastreamAndWarningtraceDatastreamAndWarning"/>
                    </log>
                    <pcml.trace>
                        <datastream>true</datastream>
                        <warning>true</warning>
                    </pcml.trace>
                </case>
                <case regex="traceAll">
                    <pcml.trace>
                        <all>true</all>
                    </pcml.trace>
                </case>
                <case regex="traceDisableAll">
                    <pcml.trace>
                        <all>false</all>
                    </pcml.trace>
                </case>
            </switch>
            <log level="full"/>
            <payloadFactory media-type="xml">
                <format>
                    <m:CheckPriceResponse xmlns:m="http://services.samples/xsd">
                        <m:Code>$1</m:Code>
                        <m:Price>$2</m:Price>
                    </m:CheckPriceResponse>
                </format>
                <args>
                    <arg value="123"/>
                    <arg value="321"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
    </target>
    <description/>
</proxy>