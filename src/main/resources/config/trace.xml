<template name="trace" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="conversion" description="Enables/Disables conversion trace logs."/>
    <parameter name="datastream" description="Enables/Disables datastream trace logs."/>
    <parameter name="diagnostics" description="Enables/Disables diagnostics trace logs."/>
    <parameter name="error" description="Enables/Disables error trace logs."/>
    <parameter name="information" description="Enables/Disables information trace logs."/>
    <parameter name="pcml" description="Enables/Disables pcml trace logs."/>
    <parameter name="warning" description="Enables/Disables warning trace logs."/>
    <parameter name="all" description="Enables/Disables all trace logs."/>
    <sequence>
        <class name="org.wso2.carbon.connector.pcml.AS400Trace"/>
    </sequence>
</template>